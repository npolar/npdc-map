{
  "fieldsets": [
    {
      "title": "Title and type",
      "fields": [
        "title",
        { "id": "preamble"},
        { "id": "subtitle"},
       "type"
        
      ]
    },
    {
      "title": "Publication",
      "fields": [
        { "id": "publication" }
      ]
    },
    {
      "title": "Contributions",
      "fields": [
        "publishers", { "id": "contributors",
          "fields":[
            { "id": "role",
              "enum": ["principalInvestigator", "editor", "processor", "rightsHolder", "originator"]
            }]
        }]
    },
    {
      "title": "Geographic",
      "fields": [
        { "id": "geometry", "fields": ["bbox"] },
        { "id": "scales"},
        "placenames"
      ]
    },
    {
      "title": "Archives",
      "fields": [
        {
          "id": "archives"
        }
      ]
    },
    {
      "title": "Texts",
      "fields": [
        { "id": "summaries"},
        { "id": "comments"}
      ]
    },
    {
      "title": "Keywords",
      "fields": [
        { "id": "tags"}
      ]
    },
    {
      "title": "File uploads",
      "fields": [
        { "id": "restricted", "condition": "true"},
        { "id": "license",
          "enum": [
            null,
            "http://creativecommons.org/publicdomain/mark/1.0/",
            "http://creativecommons.org/publicdomain/zero/1.0/",
            "http://creativecommons.org/licenses/by/4.0/"
          ],
          "default": "http://creativecommons.org/licenses/by/4.0/"
        },
        { "id": "files", "condition": "true" }
      ]
    }
  ]
}